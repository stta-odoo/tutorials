<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Property demo -->
    <record id="estate_property_data_0" model="estate.property">
        <field name="name">Big Villa</field>
        <field name="state">new</field>
        <field name="description">A nice and big villa</field>
        <field name="postcode">12345</field>
        <field name="date_availability">2020-02-02</field>
        <field name="expected_price">1600000</field>
        <field name="bedrooms">6</field>
        <field name="living_area">100</field>
        <field name="facades">4</field>
        <field name="garage">TRUE</field>
        <field name="garden">TRUE</field>
        <field name="garden_area">100000</field>
        <field name="garden_orientation">south</field>
        <field name="property_type_id" ref="estate_property_type_data_0"></field>
    </record>

    <record id="estate_property_data_1" model="estate.property">
        <field name="name">Trailer home</field>
        <field name="state">canceled</field>
        <field name="description">Home in a trailer park</field>
        <field name="postcode">54321</field>
        <field name="date_availability">1970-01-01</field>
        <field name="expected_price">100000</field>
        <field name="selling_price">120000</field>
        <field name="bedrooms">1</field>
        <field name="living_area">10</field>
        <field name="facades">4</field>
        <field name="garage">FALSE</field>
        <field name="property_type_id" ref="estate_property_type_data_0"></field>
    </record>

    <data noupdate="1"> 
        <record id="estate_property_data_2" model="estate.property">
            <field name="name">Luxury Hotel</field>
            <field name="state">new</field>
            <field name="description">Home in a trailer park</field>
            <field name="postcode">54321</field>
            <field name="date_availability">1970-01-01</field>
            <field name="expected_price">100000</field>
            <field name="bedrooms">1</field>
            <field name="living_area">10</field>
            <field name="facades">4</field>
            <field name="garage">FALSE</field>
            <field name="property_type_id" ref="estate_property_type_data_1"></field>
            <field name="offer_ids" eval="[
                Command.create({
                    'buyer_id': ref('base.res_partner_2'),
                    'price': 1500000,
                    'validity': 14,
                }),
            ]"/>
        </record>
    </data>

    <!-- Offer demo -->
    <record id="estate_property_offer_data_0" model="estate.property.offer">
        <field name="buyer_id" ref="base.res_partner_12"></field>
        <field name="property_id" ref="estate_property_data_0"></field>
        <field name="price">10000</field>
        <field name="date_deadline" eval="DateTime.today() + relativedelta(days=18)"/>
    </record>
    
    <record id="estate_property_offer_data_1" model="estate.property.offer">
        <field name="buyer_id" ref="base.res_partner_12"></field>
        <field name="property_id" ref="estate_property_data_0"></field>
        <field name="price">1500000</field>
        <field name="date_deadline" eval="DateTime.today() + relativedelta(days=14)"/>
    </record>

    <record id="estate_property_offer_data_2" model="estate.property.offer">
        <field name="buyer_id" ref="base.res_partner_2"></field>
        <field name="property_id" ref="estate_property_data_0"></field>
        <field name="price">1500001</field>
        <field name="date_deadline" eval="DateTime.today() + relativedelta(days=14)"/>
        <!-- <field name="account_id" search="[
        ('user_type_id', '=', ref('account.data_account_type_direct_costs')),
        ('company_id', '=', obj().env.company.id)]
        "/>  -->
    </record>

    <function model="estate.property.offer" name="action_accept">
        <value eval="[ref('estate_property_offer_data_2')]"/>
    </function>
</odoo>
