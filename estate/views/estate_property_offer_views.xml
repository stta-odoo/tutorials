<?xml version="1.0"?>

<odoo>
    <record id="estate_property_offer_view_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Estate Property Offer Form">
                <sheet>
                    <group>
                        <field name="price"></field>
                        <field name="status"></field>
                        <field name="buyer_id"></field>
                        <field name="validity"></field>
                        <field name="date_deadline"></field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_offer_view_tree" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree string="Test" >
                <field name="price"/>
                <field name="buyer_id"/>
                <field name="validity"/>
                <button name="action_accept" type="object" icon="fa-check" invisible="status != False"/>
                <button name="action_refuse" type="object" icon="fa-times" invisible="status != False"/>
                <button name="action_cancel" type="object" icon="fa-undo"/>
                <field name="status"/>
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>
</odoo>
