<?xml version="1.0"?>

<odoo>

    <record id="estate_property_view_search" model="ir.ui.view">
        <field name="name">estate.property.search</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <search string="Search Property">
                <field name="name"/>
                <field name="postcode"/>
                <field name="expected_price"/>
                <field name="bedrooms"/>
                <field name="living_area"
                filter_domain="[('living_area', '>=', self)]"/>
                <field name="facades"/>
                <field name="property_type_id"/>
                <!-- <field name="facades"/> -->
                <filter string="Available" name="available_properties" domain="['|',('state','=','Offer Received'),('state','=','New')]"/>
                <filter string="Postcode" name="group_postcode" context="{'group_by':'postcode'}"/>
                <!-- <filter string="test_filter" name="test_filter" domain="['&amp;', ('expected_price','&lt;=', 10000), ('living_area', '>', 100)]"/> -->
            </search> 
        </field>
    </record>

    <record id="estate_property_view_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property Form">
                <header>
                    <button name="action_sold_click" type="object" string="SOLD"/>
                    <button name="action_cancel_click" type="object" string="CANCEL"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,offer_received,offer_accepted,sold"/>
                </header>
                <sheet>
                    <div class="h1">
                        <field name="name"></field>
                    </div>
                    <group>
                        <field name="property_tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                        <group>
                            <field name="state"></field>
                            <field name="property_type_id" options="{'no_create': true}"></field>
                            <field name="postcode"></field>
                            <field name="date_availability"></field>                        
                        </group>
                        <group>
                            <field name="expected_price"></field>
                            <field name="best_price"></field>
                            <field name="selling_price"></field>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="active"></field>
                                <field name="description"></field>
                                <field name="bedrooms"></field>
                                <field name="total_area"></field>
                                <field name="living_area"></field>
                                <field name="facades"></field>
                                <field name="garage"></field>
                                <field name="garden"></field>
                                <field name="garden_area" invisible="not garden"></field>
                                <field name="garden_orientation" invisible="not garden"></field>
                            </group>
                        </page>
                        <page string="Offers">
                            <field name="offer_ids" readonly="state=='sold' or state=='canceled' or state=='offer_accepted'"></field>
                        </page>
                        <page string="Other Info">
                            <group>
                                <field name="buyer_id"></field>
                                <field name="salesperson_id"></field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="estate_property_view_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Test"
            decoration-success="state == 'offer_received' or state == 'offer_accepted'"
            decoration-bf="state == 'offer_accepted'"
            decoration-muted="state == 'sold'">
                <field name="name"/>
                <field name="postcode"/>
                <field name="bedrooms"/>
                <field name="living_area"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="state"/>
                <field name="date_availability" optional='true'/>
            </tree>
        </field>
    </record>

    <record id="estate_property_action" model="ir.actions.act_window">
        <field name="name">Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available_properties': True}</field>
    </record>
</odoo>
