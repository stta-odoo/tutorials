<?xml version="1.0"?>

<odoo>
    <record id="sale_order_branch_view_search" model="ir.ui.view">
        <field name="name">sale.order.branch.search</field>
        <field name="model">sale.order.branch</field>
        <field name="arch" type="xml">
            <search string="Search Property">
                <field name="name"/>
                <!-- <field name="sequence_id"
                filter_domain="[('living_area', '>=', self)]"/> -->
            </search> 
        </field>
    </record>

    <record id="sale_order_branch_view_form" model="ir.ui.view">
        <field name="name">sale.order.branch.form</field>
        <field name="model">sale.order.branch</field>
        <field name="arch" type="xml">
            <form string="Sale Order Branch">
                <sheet>
                    <div class="h1">
                        <field name="name"></field>
                    </div>
                    <group>
                        <field name="sequence_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_order_branch_view_tree" model="ir.ui.view">
        <field name="name">sale.order.branch.tree</field>
        <field name="model">sale.order.branch</field>
        <field name="arch" type="xml">
            <tree string="view_tree">
                <field name="name"/>
                <field name="sequence_id"/>
            </tree>
        </field>
    </record>

    <record id="sale_order_branch_action" model="ir.actions.act_window">
        <field name="name">Branches</field>
        <field name="res_model">sale.order.branch</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
